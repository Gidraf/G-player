<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal"
    app:cardBackgroundColor="@color/colorAccent_translucent"
    app:layout_behavior="@string/fab_transformation_scrim_behavior"
    app:cardElevation="8dp">
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_alignParentRight="true"
            android:id="@+id/remove_song_btn"/>
        <com.jackandphantom.paletteshadowview.PaletteShadowView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:paletteSrc="@drawable/holder"
            android:layout_centerInParent="true"
            android:id="@+id/song_image"
            app:paletteRoundRadius="140"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/song_title"
            android:text="Hello"
            android:textAlignment="center"
            android:padding="5dp"
            android:textColor="@android:color/holo_red_dark"
            android:background="@color/colorAccent_translucent"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>