<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red_one</item>
        <item name="colorPrimaryDark">@color/main_backround</item>
        <item name="colorAccent">@color/main_backround</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#e93c0f</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#78f10808
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#e6c0b6
        </item>
    </style>

</resources>
